{% extends 'base.html.twig' %}

{% block title %}MakeSense - Create a decision{% endblock %}

{% block body %}
    <div class="header-container">
        {% include '_header/headerConnected.html.twig' %}
    </div>

    <div class="d-flex container justify-content-between mt-4">
        <div class="d-flex flex-column step-process col-4 mt-4">
            {% include 'create_decision/stepVisualisation.html.twig' %}
        </div>
        <div class="d-flex flex-column col-4">
        </div>
        <div class="d-flex flex-column creation-form col-7">
            <h1 class="creation-section-title">Creation start</h1>
            {{ form_start(form) }}
            {{ form_label(form.ongoingTitle, 'Title') }}
            <div class="form_error">
                {{ form_errors(form.ongoingTitle) }}
            </div>
            {{ form_widget(form.ongoingTitle) }}

            {{ form_label(form.category, 'Category') }}
            <div class="form_error">
                {{ form_errors(form.category) }}
            </div>
            {{ form_widget(form.category) }}
            {{ form_label(form.ongoingProblem) }}
            <div class="form_error">
                {{ form_errors(form.ongoingProblem) }}
            </div>
            {{ form_widget(form.ongoingProblem) }}
            <div class="navigation-buttons d-flex justify-content-between mt-3">
                <div>
                        <button type="button" class="btn cancel-button-step1" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Cancel</button>
                </div>
                <div class="">
                    {% if decision.currentStep == '5' %}
                        <button type="submit" class=" btn submit-button d-flex float-end">To confirmation</button>
                    {% else %}
                        <button type="submit" class=" btn submit-button d-flex float-end">Next</button>
                    {% endif %}
                </div>

                {{ form_end(form) }}
            </div>

        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Confirm cancellation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Please be aware that you will lose everything you wrote.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">It was a mistake !</button>
                    <a href="{{ path('app_home') }}">
                    <button type="button" class="btn submit-button">Understood</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <div class="fixed-bottom">
        {% include '_header/footer.html.twig' %}
    </div>
{% endblock %}
